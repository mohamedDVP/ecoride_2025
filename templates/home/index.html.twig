{% extends 'base.html.twig' %}

{% block title %}Accueil - EcoRide
{% endblock %}

{% block body %}
	<!-- Hero Section -->
	<section class="bg-primary text-white py-5 mb-5 rounded">
		<div class="container py-4">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<h1 class="display-4 fw-bold mb-3">Voyagez malin, voyagez
						<span class="text-warning">écologique</span>.</h1>
					<p class="lead mb-4">Trouvez ou proposez des trajets en covoiturage pour réduire votre empreinte carbone et vos dépenses.</p>
					<a href="{{ path('app_covoiturages') }}" class="btn btn-outline-light btn-lg px-4">Trouver un covoiturage</a>
				</div>
				<div class="col-lg-6">
					<img src="{{ asset('images/hero-ecoride.png') }}" alt="Covoiturage écologique" class="img-fluid rounded">
				</div>
			</div>
		</div>
	</section>

	<!-- Comment ça marche -->
	<section class="mb-5">
		<div class="container">
			<h2 class="text-center mb-4 fw-bold">Comment ça marche ?</h2>
			<div class="row g-4">
				<div class="col-md-4">
					<div class="card h-100 text-center">
						<div class="card-body">
							<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
								<i class="bi bi-search h3"></i>
							</div>
							<h5 class="card-title">Trouvez un trajet</h5>
							<p class="card-text">Recherchez un trajet parmi les milliers d'offres disponibles.</p>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="card h-100 text-center">
						<div class="card-body">
							<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
								<i class="bi bi-car-front-fill h3"></i>
							</div>
							<h5 class="card-title">Réservez votre place</h5>
							<p class="card-text">Choisissez un trajet et réservez en quelques clics.</p>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="card h-100 text-center">
						<div class="card-body">
							<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
								<i class="bi bi-tree-fill h3"></i>
							</div>
							<h5 class="card-title">Voyagez écologique</h5>
							<p class="card-text">Partagez les frais et réduisez votre impact environnemental.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Pourquoi nous choisir -->
	<section class="bg-secondary py-5 mb-5 rounded">
		<div class="container py-4">
			<h2 class="text-center mb-4 fw-bold">Pourquoi nous choisir ?</h2>
			<div class="row g-4">
				<div class="col-md-4">
					<div class="text-center">
						<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
							<i class="bi bi-cash-coin h3"></i>
						</div>
						<h5 class="fw-bold">Économique</h5>
						<p>Partagez les frais de trajet et voyagez à moindre coût.</p>
					</div>
				</div>
				<div class="col-md-4">
					<div class="text-center">
						<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
							<i class="bi bi-tree-fill h3"></i>
						</div>
						<h5 class="fw-bold">Écologique</h5>
						<p>Réduisez votre empreinte carbone en partageant votre véhicule.</p>
					</div>
				</div>
				<div class="col-md-4">
					<div class="text-center">
						<div class="bg-primary-light p-3 mb-3 rounded-circle d-inline-block">
							<i class="bi bi-people-fill h3"></i>
						</div>
						<h5 class="fw-bold">Communautaire</h5>
						<p>Rencontrez des voyageurs partageant les mêmes valeurs que vous.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

