<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}EcoRide
			{% endblock %}
		</title>
		<!-- Polices -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
		<!-- Bootstrap + CSS personnalisé -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
		<link
		rel="stylesheet" href="{{ asset('styles/app.css') }}">
		<!-- Icônes Bootstrap -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"> {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-navbar">
            <div
                class="container">
                <!-- Logo + Nom -->
                <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                    <i class="bi bi-tree-fill me-2"></i>
                    <span class="fw-bold">EcoRide</span>
                </a>
                <!-- Bouton mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Liens -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'app_covoiturages' %}active{% endif %}" href="{{ path('app_covoiturages') }}">Covoiturages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'app_contact' %}active{% endif %}" href="{{ path('app_contact') }}">Contact</a>
                        </li>
                    </ul>
                    <!-- Boutons utilisateur -->
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    {% if app.user.photo %}
                                        <img src="{{ asset('uploads/' ~ app.user.photo) }}" alt="Photo de profil" class="rounded-circle me-2" width="30" height="30">
                                    {% else %}
                                        <i class="bi bi-person-circle me-2"></i>
                                    {% endif %}
                                    <span>{{ app.user.pseudo }}</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_user_dashboard') }}">
                                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord</a>
                                    </li>
                                    {% if 'ROLE_CHauffeur' in app.user.roles %}
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_user_voitures') }}">
                                                <i class="bi bi-car-front-fill me-2"></i>Mes véhicules</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_covoiturage_create') }}">
                                                <i class="bi bi-plus-circle me-2"></i>Proposer un trajet</a>
                                        </li>
                                    {% endif %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">
                                            <i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light" href="{{ path('app_register') }}">Inscription</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Contenu principal -->
        <main class="container my-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="bg-footer text-white py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5 class="mb-3">
                            <i class="bi bi-tree-fill me-2"></i>EcoRide</h5>
                        <p>La plateforme de covoiturage écologique pour des trajets responsables et économiques.</p>
                    </div>
                    <div class="col-md-2">
                        <h5 class="mb-3">Liens utiles</h5>
                        <ul class="list-unstyled">
                            <li>
                                <a href="{{ path('app_mentions_legales') }}" class="text-light">
                                    <i class="bi bi-file-earmark-text me-2"></i>Mentions légales</a>
                            </li>
                            <li>
                                <a href="{{ path('app_contact') }}" class="text-light">
                                    <i class="bi bi-envelope me-2"></i>Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h5 class="mb-3">Réseaux sociaux</h5>
                        <ul class="list-unstyled d-flex">
                            <li>
                                <a href="#" class="text-light me-3">
                                    <i class="bi bi-facebook"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-light me-3">
                                    <i class="bi bi-twitter"></i>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-light">
                                    <i class="bi bi-instagram"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h5 class="mb-3">Contact</h5>
                        <p class="mb-1">
                            <i class="bi bi-envelope me-2"></i>contact@ecoride.fr</p>
                        <p class="mb-0">
                            <i class="bi bi-telephone me-2"></i>+33 1 23 45 67 89</p>
                    </div>
                </div>
                <hr class="bg-light">
                <div class="text-center">
                    <p class="mb-0">&copy;
                        {{ 'now'|date('Y') }}
                        EcoRide. Tous droits réservés.</p>
                </div>
            </div>
        </footer>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

